{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    // This defines a model hosted on Hypermode that can be used for vector embeddings.
    "minilm": {
      "sourceModel": "sentence-transformers/all-MiniLM-L6-v2",
      "provider": "hugging-face",
      "connection": "hypermode"
    },
    // This defines a model hosted on OpenAI that can be used for vector embeddings.
    "openai-embeddings": {
      "sourceModel": "text-embedding-3-large",
      "connection": "openai",
      "path": "v1/embeddings"
    }
  },
  "collections": {
    "productNames": {
      "searchMethods": {}
    },
    "productDescriptions": {
      "searchMethods": {
        "searchMethod1": {
          "embedder": "miniLMEmbed",
          "index": {
            "type": "sequential"
          }
        }
      }
    },
    "productCategories": {
      "searchMethods": {}
    },
    "productPrices": {
      "searchMethods": {}
    },
    "productImages": {
      "searchMethods": {}
    },
    "productStars": {
      "searchMethods": {}
    },
    "isProductStocked": {
      "searchMethods": {}
    }
  }
}
